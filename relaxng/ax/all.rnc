default namespace = "http://www.w3.org/2005/XQueryX"

expr = notAllowed

# [40]  ForwardAxis  ::=   ("child" "::")
#                        | ("descendant" "::")
#                        | ("attribute" "::")
#                        | ("self" "::")
#                        | ("descendant-or-self" "::")
#                        | ("following-sibling" "::")
#                        | ("following" "::")
#                        | ("namespace" "::")
# [41]  AbbrevForwardStep ::= "@"? NodeTest
# [43]  ReverseAxis  ::=   ("parent" "::")
#                        | ("ancestor" "::")
#                        | ("preceding-sibling" "::")
#                        | ("preceding" "::")
#                        | ("ancestor-or-self" "::")
# [44]  AbbrevReverseStep ::= ".."
start = string "child"
      | string "attribute"
      | string "self"
      | string "parent"
      | string "descendant-or-self"
      | string "descendant"
      | string "following"
      | string "following-sibling"
      | string "ancestor"
      | string "ancestor-or-self"
      | string "preceding"
      | string "preceding-sibling"
      | string "namespace"
