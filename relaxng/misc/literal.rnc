default namespace = "http://www.w3.org/2005/XQueryX"

# [56] PrimaryExpr     ::=  Literal
# [57] Literal 	       ::=  NumericLiteral | StringLiteral 	
# [58] NumericLiteral  ::=  IntegerLiteral | DecimalLiteral | DoubleLiteral
start = literal | varref

literal = element integerConstantExpr {
  element value { xsd:int }
}
literal |= element decimalConstantExpr {
  element value { xsd:decimal }
}
literal |= element doubleConstantExpr {
  element value { xsd:double }
}
literal |= element stringConstantExpr {
  element value { xsd:string }
}

# [56] PrimaryExpr ::=  VarRef
# [59] VarRef 	   ::=  "$" VarName
# [60] VarName     ::=  EQName
varref = element varRef {
  element name { external "eqname.rnc" }
}